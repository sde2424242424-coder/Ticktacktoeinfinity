<?xml version="1.0" encoding="utf-8"?>
<!--    Основной контейнер экрана. ConstraintLayout позволяет гибко располагать
    элементы (виджеты) относительно друг друга и родительского контейнера.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/game_bg"
    tools:context=".GameActivity">

    <!--
        Верхняя панель инструментов (Toolbar).
        Используется для заголовка экрана, кнопки "назад" и меню (например, "Настройки").
    -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:backgroundTint="@color/colorPrimary"
        app:title="@string/game_title"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:menu="@menu/menu_game"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--
        Текстовое поле для вывода статуса игры.
        Здесь будет отображаться информация: "Ваш ход", "Победил игрок", "Ничья" и т.д.
    -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingVertical="8dp"
        android:gravity="center"
        android:text="@string/game_status_your_turn"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textStyle="bold"
        android:background="@drawable/bg_status"
        app:layout_constraintTop_toBottomOf="@id/toolbarGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--
        Карточка для отображения игрового счёта.
        MaterialCardView добавляет тень и скруглённые углы, делая блок визуально обособленным.
    -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="4dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Внутри карточки используется LinearLayout для горизонтального расположения трёх секций счёта. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center">

            <!-- Секция 1: Счёт игрока -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvPlayerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_player"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPlayerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Разделитель между секциями -->
            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/game_divider" />

            <!-- Секция 2: Счёт ничьих -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvDrawLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_draw"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDrawScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Разделитель между секциями -->
            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/game_divider" />

            <!-- Секция 3: Счёт компьютера (ИИ) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvAiLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_ai"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAiScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!--
        Карточка, содержащая само игровое поле.
        Это хороший приём, чтобы визуально выделить поле на фоне остального экрана.
        Атрибуты layout_constraint... растягивают эту карточку на всё доступное
        пространство между счётом и нижними кнопками.
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBoard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardScore"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1">

        <!--
            GridLayout - идеальный контейнер для игрового поля.
            Он автоматически выстраивает дочерние элементы в виде сетки.
        -->
        <GridLayout
            android:id="@+id/gridBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:rowCount="3"
            android:columnCount="3">

            <!--
                9 кнопок-клеток. Каждая кнопка имеет свой уникальный id (например, btn_cell_00),
                чтобы к ней можно было обратиться из Java-кода.
                `style="@style/GameCellButton"` - отличный пример использования стилей.
                Вместо того чтобы копировать кучу атрибутов для каждой кнопки,
                вы вынесли их в отдельный стиль.
            -->
            <Button android:id="@+id/btn_cell_00" style="@style/GameCellButton" />
            <Button android:id="@+id/btn_cell_01" style="@style/GameCellButton" />
            <Button android:id="@+id/btn_cell_02" style="@style/GameCellButton" />
            <Button android:id="@+id/btn_cell_10" style="@style/GameCellButton" />
            <Button android:id="@+id/btn_cell_11" style="@style/GameCellButton" />
            <Button android:id="@+id/btn_cell_12" style="@style/GameCellButton" />
            <Button android:id="@+id/btn_cell_20" style="@style/GameCellButton" />
            <Button android:id="@+id/btn_cell_21" style="@style/GameCellButton" />
            <Button android:id="@+id/btn_cell_22" style="@style/GameCellButton" />

        </GridLayout>
    </androidx.cardview.widget.CardView>

    <!--
        Нижняя панель с кнопками управления.
        Использует LinearLayout для горизонтального расположения кнопок.
    -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Кнопка для начала новой игры -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNewGame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_new_game" />

        <!-- Пустое пространство между кнопками -->
        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <!-- Кнопка для сброса всего счёта -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUndo"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_cancel_game" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
