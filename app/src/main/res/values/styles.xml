<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GameCellButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <!-- Цвет текста -->
        <item name="android:textColor">@android:color/black</item>

        <!-- Фон кнопки (обводка, без заливки) -->
        <item name="android:backgroundTint">@android:color/transparent</item>

        <!-- Отступы вокруг текста внутри кнопки -->
        <item name="android:padding">4dp</item>

        <!-- Убираем все заглавные буквы -->
        <item name="android:textAllCaps">false</item>
        <!-- Ваши существующие атрибуты стиля (могут отличаться) -->
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>


        <!-- ДОБАВИТЬ: Устанавливаем ширину и высоту на 0dp.
             Это сигнал для GridLayout, что размер будет управляться "весом". -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>

        <!-- ДОБАВИТЬ: Говорим кнопке занимать все доступное пространство в своей ячейке
             как по горизонтали (columnWeight), так и по вертикали (rowWeight). -->
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
    </style>

</resources>
